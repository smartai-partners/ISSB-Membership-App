# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/issb_membership
MONGODB_TEST_URI=mongodb://localhost:27017/issb_membership_test

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1
API_VERSION=v1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048
IMAGE_QUALITY=85

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email Service Provider (smtp, sendgrid, mailgun, ses)
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@issb.org
EMAIL_FROM_NAME=ISSB Membership Portal

# SendGrid (Alternative)
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@issb.org
# SENDGRID_FROM_NAME=ISSB Membership Portal

# Mailgun (Alternative)
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=your-mailgun-domain

# =============================================================================
# CLOUD STORAGE (Optional - for file uploads)
# =============================================================================
# AWS S3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=issb-membership-files

# Google Cloud Storage
# GCS_PROJECT_ID=your-project-id
# GCS_BUCKET_NAME=issb-membership-files
# GCS_KEYFILE_PATH=path/to/service-account-key.json

# =============================================================================
# PAYMENT PROCESSING (Future Implementation)
# =============================================================================
# Stripe
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal
# PAYPAL_CLIENT_ID=your-paypal-client-id
# PAYPAL_CLIENT_SECRET=your-paypal-client-secret
# PAYPAL_MODE=sandbox

# =============================================================================
# ANALYTICS AND MONITORING
# =============================================================================
# Google Analytics
# GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (Error Tracking)
# SENTRY_DSN=your-sentry-dsn

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=5
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true
ENABLE_COLORIZED_LOGGING=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis (for session storage and caching)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# =============================================================================
# MEMBERSHIP SPECIFIC SETTINGS
# =============================================================================
DEFAULT_MEMBERSHIP_TIER=regular
MAX_PENDING_APPLICATIONS=50
BOARD_MEMBERSHIP_DURATION=365
APPLICATION_REVIEW_DAYS=30
EVENT_REGISTRATION_DEADLINE_DAYS=7

# Membership Fees
# REGULAR_MEMBERSHIP_FEE=50.00
# BOARD_MEMBERSHIP_FEE=100.00
# CURRENCY=USD

# =============================================================================
# VALIDATION AND BUSINESS RULES
# =============================================================================
MIN_PASSWORD_LENGTH=8
MAX_PASSWORD_LENGTH=128
EMAIL_VERIFICATION_REQUIRED=true
PHONE_VERIFICATION_REQUIRED=false
REQUIRE_TWO_FACTOR_AUTH=false

# Document Validation
VERIFY_DOCUMENTS=true
REQUIRE_REFERENCES=true
REFERENCE_VERIFICATION_REQUIRED=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=true
VERBOSE_LOGGING=true
HOT_RELOAD=true
ENABLE_API_DOCS=true

# =============================================================================
# TESTING SETTINGS
# =============================================================================
TEST_USER_EMAIL=test@issb.org
TEST_USER_PASSWORD=testpassword123
SEED_DATABASE=false
SKIP_EMAIL_VERIFICATION=true