# Environment Configuration for ISSB Membership Application

# =============================================================================
# NODE.JS / APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=5000
API_PREFIX=/api/v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB
MONGODB_URI=mongodb://localhost:27017/issb_membership
MONGODB_TEST_URI=mongodb://localhost:27017/issb_membership_test

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# EMAIL CONFIGURATION (for notifications, password reset, etc.)
# =============================================================================
# Email Service (e.g., SendGrid, Mailgun, AWS SES)
EMAIL_SERVICE=
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@issb.org

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_DIR=./uploads

# =============================================================================
# MEMBERSHIP SETTINGS
# =============================================================================
DEFAULT_MEMBERSHIP_TIER=regular
BOARD_MEMBERSHIP_DURATION=365
MAX_PENDING_APPLICATIONS=50

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Payment Processing (Stripe, PayPal, etc.)
PAYMENT_SERVICE=
PAYMENT_API_KEY=
PAYMENT_WEBHOOK_SECRET=

# Cloud Storage (AWS S3, Google Cloud, etc.)
CLOUD_STORAGE=
CLOUD_BUCKET=
CLOUD_ACCESS_KEY=
CLOUD_SECRET_KEY=

# Analytics (Google Analytics, Mixpanel, etc.)
ANALYTICS_ID=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=true
VERBOSE_LOGGING=true
HOT_RELOAD=true